@model PiedPiperIN.Models.user_profile
@{
    ViewBag.Title = "Create";
}
<center>
    <h2>Sign Up to Pied Piper</h2>

    @using (Html.BeginForm("Create_user", "Home", FormMethod.Post))
    {
        <center>
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            @if (@ViewBag.id != null)
            {
                <div style="border: 1px solid red">
                    @ViewBag.id
                </div>
            }
                <div class="form-group">
                    @Html.TextBoxFor(a => a.Email, new { placeholder = Html.DisplayNameFor(a => a.Email), @class = "form-control" })

                    @Html.ValidationMessageFor(a => a.Email)

                </div>
           
                <div class="form-group">
                    @Html.PasswordFor(a => a.Password, new { placeholder = Html.DisplayNameFor(a => a.Password), @class = "form-control" })

                    @Html.ValidationMessageFor(a => a.Password)
                </div>
           
                <div class="form-group">
                    @Html.TextBoxFor(a => a.Name, new { placeholder = Html.DisplayNameFor(a => a.Name), @class = "form-control" })

                    @Html.ValidationMessageFor(a => a.Name)
                </div>
           
                <div class="form-group">
                    @Html.TextBoxFor(a => a.Address, new { placeholder = Html.DisplayNameFor(a => a.Address), @class = "form-control" })

                    @Html.ValidationMessageFor(a => a.Address)
                </div>
          
                <div class="form-group">
                    <input type="submit" id="submit" value="Sign up" class="btn btn-dark" />

                     @Html.ActionLink("Login", "Login", "Home", new { @class = "btn btn-dark" })
                </div>
            
            
                
            

        </center>
    }
</center>

