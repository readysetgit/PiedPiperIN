@model PiedPiperIN.Models.user_profile
@{
    ViewBag.Title = "Index";
}

<h2>PIED PIPER IN</h2>
<h3>Login Page</h3>
<br />

@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
<fieldset>
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @if (Session["state"] == "true")
    {
        <span id="">Thanks for registering!</span>
        Session["state"] = "false";
    }
    @if (Session["wrong"] == "true")
    {
        <span id="">Wrong Password!</span>
        Session["wrong"] = "false";
    }

    <br />
    <br />
    @Html.TextBoxFor(a => a.Email, new { placeholder = Html.DisplayNameFor(a => a.Email) })
    <br />
    @Html.ValidationMessageFor(a => a.Email)

    <br />
    @Html.PasswordFor(a => a.Password, new { placeholder = Html.DisplayNameFor(a => a.Password) })
    <br />
    @Html.ValidationMessageFor(a => a.Password)


    <br />
    <div >
        <input type="submit" id="submit" value="Login" style="background-color: #4CAF50;  border: none;   color: white;   padding: 10px 15px;   text-align: center;    text-decoration: none;    display: inline-block;   font-size: 16px;" />

    </div>

</fieldset>
}
<br />
@Html.ActionLink("Sign Up", "Create", "Home", new { @style = "background-color: #00CED1;  border: none;   color: white;   padding: 10px 15px;   text-align: center;    text-decoration: none;    display: inline-block;   font-size: 16px;" })
