@model Tuple <PiedPiperIN.Models.product, PiedPiperIN.Models.cart_view>

@{
    ViewBag.Title = "UserDashBoard";
}

<h2>UserDashBoard</h2>

<p>
    @Html.ActionLink("UploadProduct", "UploadProduct", "Product")
</p>
<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(tuple => tuple.Item1.Product_ID)
        </th>
        <th>
            @Html.DisplayNameFor(tuple => tuple.Item1.Product_Name)
        </th>
        <th>
            @Html.DisplayNameFor(tuple => tuple.Item1.Product_Pic)
        </th>
        <th></th>
    </tr>

    @foreach (Tuple<PiedPiperIN.Models.product, PiedPiperIN.Models.cart_view> tuple in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem =>tuple.Item1.Product_ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => tuple.Item1.Product_Name)
        </td>
        <td>
            <img src="~/Content/@Html.DisplayFor(modelItem => tuple.Item1.Product_Pic)" width="100" height="100" />

        </td>
        <td><form id="cart" action="addtocart.cs"><input type="text" id="qty " style="width:40px;" placeholder="qty" /> <input type="submit" value="Add to cart" /></form></td>
        <td>
            @using (Html.BeginForm("Create", "Home", FormMethod.Post))
            {

                @Html.TextBoxFor(a =>tuple.Item2.product_name, new { placeholder = Html.DisplayNameFor(a => tuple.Item2.product_name) })

            }
        </td>
    </tr>
    }


</table>
<input type="submit" value="Go to Cart" />

